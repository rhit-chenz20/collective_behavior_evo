late() {
	if(mutToAdd_a != 0 | mutToAdd_psi != 0){
		mutatedPos = unique(p1.haplosomes.mutations).position;
		if (L + mutToAdd_a + mutToAdd_psi<= maxL){
			// within maxL
			if (length(mutatedPos) + mutToAdd_a + mutToAdd_psi > L){
				//extend the region
				defineGlobal("L", L + mutToAdd_a + mutToAdd_psi - (L-length(mutatedPos)));
				p1.haplosomes.chromosome.setMutationRate(c(U/L, 0), c(L-1,maxL-1));
				p1.haplosomes.chromosome.setRecombinationRate(c(0.5, 0), c(L-1,maxL-1));
			}
			
			availableSites = setDifference(0:(L-1), mutatedPos);
			haplosomes = sample(p1.haplosomes, mutToAdd_a + mutToAdd_psi, replace=T);
			for (i in 0:(length(availableSites)-1)){
				if (i== mutToAdd_a+mutToAdd_psi) break;
				if (i<mutToAdd_a) {
					haplosomes[i].addNewDrawnMutation(m2, availableSites[i]);
				} else if (i<mutToAdd_a+mutToAdd_psi){
					haplosomes[i].addNewDrawnMutation(m3, availableSites[i]);
				}
			}
		}else{
			print(community.tick+": max L has reached with current L="+L+" and "+(mutToAdd_a+mutToAdd_psi)+" new mut");
			sim.simulationFinished();
		}
		defineGlobal("mutToAdd_a", 0);
		defineGlobal("mutToAdd_psi", 0);
	}
	
	calculate_phenotype(p1);
}
