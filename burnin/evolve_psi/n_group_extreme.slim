function (void) calculate_phenotype(o<Subpopulation>$ p){
	e = rnorm(N, mean=0, sd=0);
	
	// evaluate and save the additive effects of QTLs
	inds = p.individuals;
	
	a = inds.sumOfMutationsOfType(m2) + 2*sum(sim.substitutions[sim.substitutions.mutationType == m2].selectionCoeff);
	psis = psi + 2*atan(inds.sumOfMutationsOfType(m3) + 2*sum(sim.substitutions[sim.substitutions.mutationType == m3].selectionCoeff))/PI;
	
	shuffled = sample(inds, N, replace=F);
	phenotype = float(N);
	vars = float(N);
	group_psi_ave = float(N);
	
	for (i in seq(0, N-n, by=n)) {
		groups = shuffled[i:(i+n-1)];
        as = a[groups.index];

		mean_a = mean(as);
		dist = abs(as-mean_a);
		extreme_i = whichMax(dist);
		extreme_a = as[extreme_i];
		phenotype[groups.index] = (1-psis[groups.index]) * as + psis[groups.index] * extreme_a;

		vars[groups.index] = var(as);
		group_psi_ave[groups.index] = mean(psis[groups.index]);
	}
	
	abs_fitness = dnorm(phenotype, optimum, sqrt(Vs));
	inds.fitnessScaling = abs_fitness;
	inds.tagF = phenotype;
	
	if(community.tick >= shift_time-30){
		defineGlobal("group_vars", vars);
		defineGlobal("group_psis", group_psi_ave);
	}
}
